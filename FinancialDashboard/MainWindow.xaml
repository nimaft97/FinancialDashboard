<Window x:Class="FinancialDashboard.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Financial Dashboard" Height="400" Width="525">
    <Grid>
        <!-- TextBox for SQL Input -->
        <TextBox x:Name="QueryInput" Width="400" Height="30" VerticalAlignment="Top" Margin="10"/>

        <!-- ComboBox for Category Selection -->
        <ComboBox x:Name="CategoryDropdown" Width="200" Height="30" VerticalAlignment="Top" Margin="10,40,0,0" 
                  ItemsSource="{Binding}" SelectedItem="{Binding SelectedCategory}"/>

        <!-- Submit Button -->
        <Button Content="Submit" Width="100" Height="30" VerticalAlignment="Top" Margin="10,80,0,0" Click="SubmitQuery"/>

        <!-- TextBlock for displaying results -->
        <TextBlock x:Name="ResultOutput" Width="400" Height="200" VerticalAlignment="Top" Margin="10,120,0,0" TextWrapping="Wrap"/>
    </Grid>
</Window>
